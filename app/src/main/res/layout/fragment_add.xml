<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Addfragment"
            type="com.example.todo.ui.fragments.AddFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FFF8FB"
        tools:context=".ui.fragments.AddFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Başlık -->
            <TextView
                android:id="@+id/textViewtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Task"
                android:textColor="@color/button"
                android:textSize="34sp"
                android:textStyle="bold"
                android:fontFamily="@font/abril_fatface"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- Schedule -->
            <TextView
                android:id="@+id/textViewSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="20sp"
                android:fontFamily="@font/abril_fatface"
                android:layout_marginBottom="8dp" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/CustomCalendarView"
                android:backgroundTint="#E6C5D0"
                android:layout_marginBottom="24dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/textViewTaskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="16sp"
                android:fontFamily="@font/abril_fatface"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter task title"
                android:background="@color/white"
                android:paddingStart="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:elevation="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:fontFamily="@font/abril_fatface"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Describe your task"
                android:background="@color/white"
                android:paddingStart="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:elevation="4dp"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <!-- Start & End Time yan yana -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/textView_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:textSize="16sp"
                        android:fontFamily="@font/abril_fatface"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editTextstart_time"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="HH:MM"
                        android:inputType="time"
                        android:background="@color/white"
                        android:paddingStart="12dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:elevation="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/textView_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textSize="16sp"
                        android:fontFamily="@font/abril_fatface"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editTextendtime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="HH:MM"
                        android:inputType="time"
                        android:background="@color/white"
                        android:paddingStart="12dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:elevation="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Gradient Button -->
            <Button
                android:id="@+id/buttoncreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Task"
                android:onClick="@{() -> Addfragment.onCreateButtonClick(buttoncreate)}"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/abril_fatface"
                android:backgroundTint="@color/button"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</layout>
